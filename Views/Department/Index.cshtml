@model IEnumerable<ContosoUniversity2020.Models.Department>

@{
    ViewData["Title"] = "Index";
}

<h1>Department</h1>

<p>
    <<a class="btn btn-primary" asp-action="Create"><i class="fas fa-plus"></i>Create New</a>
</p>
<div class="table-responcive">
    <table class="table table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Buget)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreateDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Administrator)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Buget)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreateDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Administrator.Address)
                    </td>
                    <td class="iso text-nowrap">
                        <a class="ico-success" asp-action="Edit" asp-route-id="@item.DepartmentID"><i class="fas fa-edit"></i></a> |
                        <a class="ico-info"asp-action="Details" asp-route-id="@item.DepartmentID"><i class="fas fa-search-plus"></i></a> |
                        <a class="ico-danger"asp-action="Delete" asp-route-id="@item.DepartmentID"><i class="fas fa-trash-alt"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
